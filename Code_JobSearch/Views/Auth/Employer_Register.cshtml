
@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Shared/Reg_log_user.cshtml";
}
<div class="container centered-form">
    <div class="row">
        <div class="col-md-6 order-last" id="jobStarSection" style="padding:20px; position: relative;">

            <h2 style="color:green; position: relative; z-index: 1;">Giới thiệu về JobStar</h2>
            <p style="position: relative; z-index: 1;">JobStar là một nền tảng tìm việc làm hàng đầu, kết nối nhà tuyển dụng với ứng viên tiềm năng. Chúng tôi cung cấp các công cụ mạnh mẽ để bạn xây dựng hồ sơ cá nhân ấn tượng và tìm kiếm các cơ hội sự nghiệp lý tưởng.</p>
            <p style="position: relative; z-index: 1;">Hãy tham gia cùng chúng tôi và khám phá những cơ hội sự nghiệp mới!</p>

            <img src="~/Content/img/backgroud.png" alt="JobStar" class="img-fluid mt-3" style="position: absolute; top: -16px; left: 0; width: 100%; height: 100%; z-index: 0;">

            <p class="mt-3" style="position: relative; z-index: 1;">Liên hệ: support@jobstar.com</p>
        </div>





        <div class="col-md-6" style="padding-left: 0px; padding-right: 24px; margin-top: 20px;">
            <h2 style="color:green">Chào mừng bạn đến với JobStar</h2>
            <p>Đăng ký hồ sơ cho nhà tuyển dụng</p>
            <form id="registerForm">
                <div class="mb-3">
                    <label for="fullName" class="form-label">Tên người dùng</label>
                    <div class="input-group">
                        <span class="input-group-text bg-success text-white"><i class="bi bi-person"></i></span>
                        <input type="text" class="form-control" id="fullName" placeholder="Nhập tên của bạn">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text bg-success text-white"><i class="bi bi-envelope"></i></span>
                        <input type="email" class="form-control" id="email" placeholder="Nhập email của bạn">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Tên đăng nhập</label>
                    <div class="input-group">
                        <span class="input-group-text bg-success text-white"><i class="bi bi-person-circle"></i></span>
                        <input type="text" class="form-control" id="username" placeholder="Nhập tên đăng nhập">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Mật khẩu</label>
                    <div class="input-group">
                        <span class="input-group-text bg-success text-white"><i class="bi bi-lock"></i></span>
                        <input type="password" class="form-control" id="password" placeholder="Nhập mật khẩu">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Xác nhận mật khẩu</label>
                    <div class="input-group">
                        <span class="input-group-text bg-success text-white"><i class="bi bi-lock"></i></span>
                        <input type="password" class="form-control" id="confirmPassword" placeholder="Xác nhận mật khẩu">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Tên công ty</label>
                    <div class="input-group">
                        <span class="input-group-text bg-success text-white"><i class="bi bi-house"></i></span>
                        <input type="text" class="form-control" id="username" placeholder="Nhập tên công ty">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Địa chỉ</label>
                    <div class="input-group">
                        <span class="input-group-text bg-success text-white"><i class="bi bi-person-circle"></i></span>
                        <input type="text" class="form-control" id="username" placeholder="Tỉnh/Thành phố">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Số điện thoại</label>
                    <div class="input-group">
                        <span class="input-group-text bg-success text-white"><i class="bi bi-telephone"></i></span>
                        <input type="number" class="form-control" id="username" placeholder="Nhập SĐT Công Ty">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="input-group mb-0">
                            <input type="submit" value="Đăng ký" class="btn btn-success" />
                        </div>
                    </div>
                </div>

                <div class="row" style="padding-top:12px">
                    <div class="col-sm-12">
                        <div class="input-group mb-0">
                            <center>
                                <h7>Bạn chưa có tài khoản</h7>
                                &nbsp;
                                <h7>@Html.ActionLink("Đã có tài khoản", "Dangnhap", null, new { style = "color: green;" })</h7>
                            </center>
                        </div>
                    </div>
                </div>

            </form>

        </div>


    </div>
</div>



@using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { id = "myForm" }))
                    {
                        @Html.ValidationSummary(true)
                        <h7 style="color:red;text-align:left;">@ViewData["Loi"]</h7>

                        <div class="input-group custom">
                            @Html.TextBox("HotenKH", "", new { @class = "form-control", type = "text", placeholder = "Họ Tên Khách Hàng" })
                        </div>
                        <h7 style="color:red;text-align:left">@ViewData["Loi1"]</h7>

                        <div class="input-group custom">
                            @Html.TextBox("Ngaysinh", "", new { @class = "form-control", type = "date", placeholder = "Ngày Sinh", id = "NgaySinhInput" })
                        </div>
                        <span style="color:red;text-align:left" id="NgaySinhError"></span>

                        <div class="input-group custom">
                            @Html.TextBox("TenDN", "", new { @class = "form-control", type = "text", placeholder = "Tên Đăng Nhập" })
                        </div>
                        <h7 style="color:red;text-align:left">@ViewData["Loi2"] </h7>

                        <div class="input-group custom">
                            @Html.Password("Matkhau", "", new { @class = "form-control", type = "password", placeholder = "Mật Khẩu" })
                        </div>
                        <h7 style="color:red;text-align:left">@ViewData["Loi3"]</h7>

                        <div class="input-group custom">
                            @Html.Password("ReMatkhau", "", new { @class = "form-control", type = "password", placeholder = "Nhập Lại Mật Khẩu" })
                        </div>
                        <h7 style="color:red;text-align:left">@ViewData["Loi4"]</h7>

                        <div class="input-group custom">
                            @Html.TextBox("Dienthoai", "", new { @class = "form-control", type = "tel", placeholder = "Điện Thoại" })
                        </div>
                        <h7 style="color:red;text-align:left">@ViewData["Loi5"]</h7>

                        <div class="input-group custom">
                            @Html.TextBox("Email", "", new { @class = "form-control", type = "email", placeholder = "Email" })
                        </div>

                        <div class="input-group custom">
                            @Html.TextBox("Diachi", "", new { @class = "form-control", type = "text", placeholder = "Địa Chỉ" })
                        </div>
                        <h7 style="color:red;text-align:left">@ViewData["Loi6"]</h7>

                        <div class="input-group custom">
                            @Html.Label("GioiTinhKH", "Giới tính", new { @class = "input-group-text" })
                            @Html.DropDownList("GioiTinhKH", new List<SelectListItem>
                            {
                                new SelectListItem { Text = "Nam", Value = "Nam" },
                                new SelectListItem { Text = "Nữ", Value = "Nữ" }
                            }, "Chọn giới tính", new { @class = "form-control" })
                        </div>
                        <h7 style="color:red;text-align:left">@ViewData["Loi7"]</h7>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="input-group mb-0">
                                    <input type="submit" value="Submit" class="btn btn-default" />
                                </div>
                            </div>
                        </div>

                        <br />

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="input-group mb-0">
                                    <center>    <h7>Đã có tài khoản</h7> &nbsp; <h7>@Html.ActionLink("Đăng nhập", "DangNhap", null, new { style = "color: blue;" })</h7></center>
                                </div>
                            </div>
                        </div>
                    }
<script>
    function hideOnMobile() {
        var jobStarSection = document.getElementById('jobStarSection');
        if (window.innerWidth < 768) {
            jobStarSection.style.display = 'none';
        } else {
            jobStarSection.style.display = 'block';
        }
    }

    window.addEventListener('load', hideOnMobile);
    window.addEventListener('resize', hideOnMobile);
</script>

