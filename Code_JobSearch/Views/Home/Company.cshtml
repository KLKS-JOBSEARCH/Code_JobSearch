@model IEnumerable<Code_JobSearch.Models.DoanhNghiep>

@{
    ViewBag.Title = "Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int startPage = Math.Max(1, ViewBag.Page - 2);
    int endPage = Math.Min(ViewBag.NoOfPage, ViewBag.Page + 2);
}

@{
    string iconClass = "";
    if (ViewBag.IconClass == "fa-sort-desc")
    {
        iconClass = "fa-sort-asc";
    }
    else
    {
        iconClass = "fa-sort-desc";

    }
}
<style>
    a {
        color: #1977cc;
    }

        a:hover {
            color: #6c757d;
        }

    .card {
        position: relative;
        overflow: hidden;
        height: 100%; /* Set a fixed height for the card */
        transition: transform 0.3s; /* Add a smooth transition effect */
    }

        .card:hover {
            transform: scale(1.05); /* Enlarge the card on hover */
        }

        .card img {
            width: 100%;
            height: auto;
            max-width: 100%;
            display: block;
            margin: 0 auto;
        }

    .phong {
        /* Add padding, border, and box-shadow for styling */
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .product__item__text {
        padding-top: 10px;
    }

    .vaccine-name {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        transition: white-space 0.3s; /* Add a smooth transition effect for white-space property */
    }

    .card:hover .vaccine-name {
        white-space: normal; /* Display the full text on hover */
    }

    .card-loai {
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 10px;
        width: 300px; /* Độ rộng của card */
        background-color: #fff;
    }

        .card-loai .card-header {
            background-color: #007bff; /* Màu nền của header */
            color: #fff; /* Màu chữ của header */
            padding: 10px;
            border-bottom: 1px solid #ddd;
            cursor: pointer;
        }

        .card-loai .card-body {
            padding: 15px;
        }

        .card-loai ul {
            list-style-type: none;
            padding: 0;
        }

        .card-loai li {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            transition: background-color 0.3s; /* Hiệu ứng màu nền khi hover */
        }

            .card-loai li:last-child {
                border-bottom: none; /* Loại bỏ đường viền dưới cho phần tử cuối cùng */
            }

            .card-loai li:hover {
                background-color: #f8f9fa; /* Màu nền khi hover */
            }
</style>

<h2 style="text-align:center">Danh sách các công ty</h2>
<section class="shop spad">
    <div class="container">       
                <div class="row">
                    @foreach (var p in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card phong p-3">
                                <div class="">
                                    <a href="@Url.Action("DetailsCompany", "Home", new { @id = p.Id_DN }, null)">
                                        <img style="max-block-size: 160px; margin-bottom: 10px;" src="~/Content/Logo_DoanhNghiep/@Html.Raw(p.Logo_DN)" alt="...">
                                    </a>
                                </div>
                                <div class="product__item__text" style="padding-top: 10px;">
                                    <h6 class="vaccine-name" title="@p.Ten_DN">@Html.Raw(p.Ten_DN)</h6>                                
                                </div>
                            </div>
                        </div>
                    }
                </div>

    </div>
     


        <ul class="pagination justify-content-center">
            <li class="page-item">
                @if (ViewBag.Page > 1)
                {
                    <a class="page-link" href="/Home/Company?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&page=1">
                        &lt;&lt;
                    </a>
                }
            </li>
            <li class="page-item">
                @if (ViewBag.Page > 1)
                {
                    <a class="page-link" href="/Home/Company?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&page=@(ViewBag.Page - 1)">
                        &lt;
                    </a>
                }
            </li>

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link" href="/Home/Company?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&page=@i">
                        @i
                    </a>
                </li>
            }

            <li class="page-item">
                @if (ViewBag.Page < ViewBag.NoOfPage)
                {
                    <a class="page-link" href="/Home/Company?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&page=@(ViewBag.Page + 1)">
                        &gt;
                    </a>
                }
            </li>
            <li class="page-item">
                @if (ViewBag.Page < ViewBag.NoOfPage)
                {
                    <a class="page-link" href="/Home/Company?SortColumn=@ViewBag.SortColumn&IconClass=@ViewBag.IconClass&page=@ViewBag.NoOfPage">
                        &gt;&gt;
                    </a>
                }
            </li>
        </ul>

   
</section>
<!-- Shop Section End -->
