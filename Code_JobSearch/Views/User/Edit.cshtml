@model Code_JobSearch.Models.HoSoXinViec

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:green;">Chỉnh sửa hồ sơ của bạn</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            <h4><i class="fas fa-file-alt"></i> Hồ sơ xin việc</h4>
        </div>
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id_HSXV)

            <div class="row mb-3">
                <span style="color:red;">* Các thông tin bắt buộc</span>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="HoTen_TKUV" class="form-label"><i class="fas fa-user"></i> Họ tên</label>
                        <input type="text" class="form-control" value="@Model.HoTenUV" readonly />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="Email_TKUV" class="form-label"><i class="fas fa-envelope"></i> Email</label>
                        <input type="email" class="form-control" value="@Model.EmailUV" readonly />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="SoDienThoai_TKUV" class="form-label"><i class="fas fa-phone"></i> Số điện thoại</label>
                        <input type="text" class="form-control" value="@Model.SoDienThoaiUV" readonly />
                    </div>
                </div>
            </div>

            <div class="mb-3 row">
                <label for="Ten_HSXV" class="form-label col-md-2">
                    <i class="fas fa-id-card"></i> Tên hồ sơ
                </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ten_HSXV, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Ten_HSXV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 row">
                <label for="DiaChiUV" class="form-label col-md-2"><i class="fas fa-map-marker-alt"></i> Địa chỉ</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChiUV, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChiUV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 row">
                <label for="HocVan" class="form-label col-md-2"><i class="fas fa-graduation-cap"></i> Học vấn</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HocVan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HocVan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 row">
                <label for="KyNang" class="form-label col-md-2"><i class="fas fa-tools"></i> Kỹ năng</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.KyNang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.KyNang, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 row">
                <label for="DuAnThamGia" class="form-label col-md-2"><i class="fas fa-project-diagram"></i> Dự án tham gia</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DuAnThamGia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DuAnThamGia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 row">
                <label for="MoTaBanThan" class="form-label col-md-2"><i class="fas fa-info-circle"></i> Mô tả bản thân</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MoTaBanThan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MoTaBanThan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 row">
                <label for="inputFile" class="form-label col-md-2">
                    <i class="fas fa-file-pdf"></i> Chọn file CV của bạn
                </label>
                <div class="col-md-10">
                    <input type="file" name="uploadFile" id="inputFile" accept=".pdf" class="form-control" />
                </div>
            </div>

            <div class="alert alert-warning mt-4">
                <i class="fas fa-exclamation-triangle"></i> Lưu ý:
                <p class="small">
                    JobStar khuyên tất cả các bạn hãy luôn cẩn trọng trong quá trình tìm việc và chủ động nghiên cứu về thông tin công ty, vị trí việc làm trước khi ứng tuyển.<br />
                    Ứng viên cần có trách nhiệm với hành vi ứng tuyển của mình. Nếu bạn gặp phải tin tuyển dụng hoặc nhận được liên lạc đáng ngờ của nhà tuyển dụng,
                    hãy báo cáo ngay cho JobStar qua email <a href="mailto:jobstarvn@gmail.com?subject=Báo cáo tin tuyển dụng đáng ngờ"><strong>jobstarvn@gmail.com</strong></a> để được hỗ trợ kịp thời.
                </p>
            </div>

            <!-- Nút gửi với thông báo xác nhận -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary" onclick="return confirm('Lưu thay đổi?');">
                    <i class="fas fa-save"></i> Cập nhật
                </button>
            </div>

        </div>
    </div>
}

<div class="mt-3">
    @Html.ActionLink("Quay lại", "CvUser", null, new { @class = "btn btn-primary" })
</div>
